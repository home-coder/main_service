<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/tools">

    <!-- 一般模式，对话框属性 -->
    <style name="ZcclLightDialog" parent="android:Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 浮动 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 就是在Activity跳转时，会不会有背景色的变化 -->
        <item name="android:backgroundDimEnabled">false</item>

        <!-- NoActionBar选项 -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- 下面是透明选项的 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <!-- 兼容模式，对话框属性 -->
    <style name="ZcclCompatLightDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 浮动 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 就是在Activity跳转时，会不会有背景色的变化 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 点击外部关闭 -->
        <item name="android:windowCloseOnTouchOutside">true</item>

        <!-- NoActionBar选项 -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <!-- 下面是透明选项的 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <!-- 一般模式，对话框主题 -->
    <style name="DialogTheme.Holo" parent="@android:style/Theme.Holo.Dialog.NoActionBar">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 这个一加，窗体以外部分自动半透明，窗体背景半透明需要设置-->
        <item name="android:windowIsFloating">true</item>
        <!-- 就是窗体以外部分背景色会不会暗点，来表示本对话框在最上面 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- 一般模式，对话框主题 -->
    <style name="DialogTheme.Holo.Light" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 这个一加，窗体以外部分自动半透明，窗体背景半透明需要设置-->
        <item name="android:windowIsFloating">true</item>
        <!-- 就是窗体以外部分背景色会不会暗点，来表示本对话框在最上面 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- 一般模式，对话框主题 -->
    <style name="DialogTheme" parent="android:Theme.Holo.Light">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 这个一加，窗体以外部分自动半透明，窗体自身背景半透明需要设置-->
        <item name="android:windowIsFloating">true</item>
        <!-- 就是窗体以外部分背景色会不会暗点，来表示本对话框在最上面 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- 一般模式，对话框主题 -->
    <style name="DialogTheme.Translucent" parent="@android:style/Theme.Translucent.NoTitleBar">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 这个一加，窗体以外部分自动半透明，窗体自身背景半透明需要设置-->
        <item name="android:windowIsFloating">true</item>
        <!-- 就是窗体以外部分背景色会不会暗点，来表示本对话框在最上面 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 触摸对话框以外的屏幕，对话框是否关闭-->
        <item name="android:windowCloseOnTouchOutside">true</item>

    </style>

</resources>
